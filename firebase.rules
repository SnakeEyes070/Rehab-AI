rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && resource.data.role == 'doctor';
    }
    
    // Doctors collection
    match /doctors/{doctorId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == doctorId;
    }
    
    // Patients collection
    match /patients/{patientId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.doctorId ||
        request.auth.uid == resource.data.uid
      );
      allow write: if request.auth != null && request.auth.uid == resource.data.doctorId;
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        request.auth.uid == resource.data.doctorId
      );
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // AI Models collection (for LSTM models)
    match /ai_models/{modelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Live sessions in subcollection
    match /live_sessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
  }
}